{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "build",
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@frontend/*": ["packages/frontend/*"],
      "@backend/*": ["packages/backend/src/*"]
    }
  },
  "include": [
    "packages/backend/src/**/*.ts",
    "packages/backend/tests/**/*.ts", "packages/frontend/src/**/*.tsx"],
  "exclude": ["node_modules"]
}
